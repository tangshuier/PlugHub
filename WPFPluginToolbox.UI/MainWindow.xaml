<Window x:Class="WPFPluginToolbox.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPluginToolbox.UI"
        xmlns:pluginSystem="clr-namespace:WPFPluginToolbox.PluginSystem;assembly=WPFPluginToolbox.PluginSystem"
        mc:Ignorable="d"
        Title="WPF插件工具箱" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="8"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    
    <!-- 自定义滚动条样式 -->
    <Window.Resources>
        <!-- ScrollViewer的样式 -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="{Binding Path=MainBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
        </Style>
        
        <!-- 自定义滚动条样式 -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <!-- 滚动条轨道 - 直接使用Border作为轨道，Track作为滑块容器 -->
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <!-- 滚动条轨道 - 使用WPF内置的Track实现，确保滚动方向正确 -->
                            <!-- IsDirectionReversed="True" for Vertical ensures:
                                 - Mouse wheel up → Thumb up → Page up
                                 - Mouse wheel down → Thumb down → Page down
                                 - Drag thumb up → Page up
                                 - Drag thumb down → Page down
                            -->
                            <Track x:Name="PART_Track" 
                                   Orientation="{TemplateBinding Orientation}" 
                                   IsDirectionReversed="{TemplateBinding Orientation, Converter={local:OrientationToDirectionReversedConverter}}">
                                <!-- 滑块 -->
                                <Track.Thumb>
                                    <Thumb Background="{TemplateBinding BorderBrush}" 
                                           Opacity="0.8" 
                                           Margin="1">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" 
                                                        BorderThickness="0"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <!-- 移除箭头按钮 -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Opacity="0" Focusable="False" Visibility="Collapsed"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Opacity="0" Focusable="False" Visibility="Collapsed"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- 针对垂直和水平滚动条设置不同的宽度和高度 -->
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="12"/>
                </Trigger>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="12"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 方向转换器 -->
        <local:OrientationToDirectionReversedConverter x:Key="OrientationToDirectionReversedConverter"/>
        
        <!-- 自定义TabControl样式 -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{Binding Path=PluginWorkspaceBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Foreground" Value="{Binding Path=MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="BorderBrush" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </Style>
        
        <!-- 自定义TabItem样式 -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="{Binding Path=PluginWorkspaceBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Foreground" Value="{Binding Path=MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="BorderBrush" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1,1,1,0" 
                                CornerRadius="3,3,0,0" 
                                Padding="5,2">
                            <ContentPresenter x:Name="ContentSite" 
                                              ContentSource="Header" 
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{Binding Path=MainBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                                <Setter Property="Foreground" Value="{Binding Path=MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{Binding Path=PluginWorkspaceBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 自定义ToolBar样式 -->
        <Style TargetType="ToolBar">
            <Setter Property="Background" Value="{Binding Path=ToolBarBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Foreground" Value="{Binding Path=MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="BorderBrush" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolBar">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ToolBarPanel IsItemsHost="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 自定义ContextMenu样式 -->
        <Style TargetType="ContextMenu">
            <!-- 使用动态绑定到主题服务的属性 -->
            <Setter Property="Background" Value="{Binding Path=ContextMenuBackgroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Foreground" Value="{Binding Path=MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="BorderBrush" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <!-- 直接使用带边框的背景，确保有明确的背景色 -->
                        <Border x:Name="MenuBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <StackPanel IsItemsHost="True" 
                                        KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 自定义MenuItem样式 -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{Binding Path=MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                BorderBrush="Transparent" 
                                BorderThickness="1">
                            <ContentPresenter x:Name="HeaderHost" 
                                              ContentSource="Header" 
                                              RecognizesAccessKey="True" 
                                              HorizontalAlignment="Stretch" 
                                              VerticalAlignment="Stretch" 
                                              Margin="5,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="Border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="Border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 自定义Separator样式 -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200" x:Name="DebugRow"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 自定义标题栏 -->
        <Grid Grid.Row="0" x:Name="TitleBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左边拖拽区域 -->
            <Border Grid.Column="0" Background="Transparent" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <!-- 应用程序标题 -->
                <TextBlock Text="WPF插件工具箱" FontSize="14" FontWeight="Bold" 
                           Margin="10,0,0,0" VerticalAlignment="Center" 
                           Foreground="{Binding MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            </Border>
            
            <!-- 右边按钮区域 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Right">
                <!-- 最小化按钮 -->
                <Button Content="-" FontSize="18" FontWeight="Bold" 
                        Width="30" Height="30" Background="Transparent" 
                        Foreground="{Binding MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                        BorderThickness="0" Click="MinimizeButton_Click"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                
                <!-- 最大化/还原按钮 -->
                <Button Content="□" FontSize="14" 
                        Width="30" Height="30" Background="Transparent" 
                        Foreground="{Binding MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                        BorderThickness="0" Click="MaximizeButton_Click" x:Name="MaximizeButton" 
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                
                <!-- 关闭按钮 -->
                <Button Content="X" FontSize="16" 
                        Width="30" Height="30" Background="Transparent" 
                        Foreground="{Binding MainForegroundBrush, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                        BorderThickness="0" Click="CloseButton_Click" 
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- 工具栏 -->
        <ToolBar Grid.Row="1">
            <Button Content="导入插件" Click="ImportPlugins_Click"/>
            <Separator/>
            <Button Content="打开调试窗口" Click="OpenDebugWindow_Click"/>
            <Separator/>
            <Button Content="设置" Click="OpenSettings_Click"/>
        </ToolBar>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="20"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 插件栏容器 -->
            <Grid Grid.Column="0" x:Name="PluginPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                
                <!-- 插件内容区域 -->
                <Grid Grid.Column="0" x:Name="PluginContent">
                    <!-- 插件列表 -->
                    <DockPanel Margin="2">
                        <Label Content="已加载插件" DockPanel.Dock="Top" FontWeight="Bold" Padding="5"/>
                        <ListBox x:Name="PluginsListBox" Margin="2" SelectionChanged="PluginsListBox_SelectionChanged" MouseRightButtonDown="PluginsListBox_MouseRightButtonDown">
                            <ListBox.Resources>
                                <!-- 插件项的ContextMenu -->
                                <ContextMenu x:Key="PluginItemContextMenu">
                                    <MenuItem Header="配置" Click="ConfigurePluginMenuItem_Click"/>
                                    <Separator/>
                                    <MenuItem Header="卸载插件" Click="UnloadPluginMenuItem_Click"/>
                                    <MenuItem Header="重载插件" Click="ReloadPluginMenuItem_Click"/>
                                    <MenuItem Header="导出插件" Click="ExportPluginMenuItem_Click"/>
                                    <MenuItem Header="删除插件" Click="DeletePluginMenuItem_Click"/>
                                </ContextMenu>
                                
                                <!-- 空白位置的ContextMenu -->
                                <ContextMenu x:Key="EmptySpaceContextMenu">
                                    <MenuItem Header="重载所有插件" Click="ReloadAllPluginsMenuItem_Click"/>
                                    <Separator/>
                                    <MenuItem Header="导入插件" Click="ImportPlugins_Click"/>
                                </ContextMenu>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel.ContextMenu>
                                            <StaticResource ResourceKey="PluginItemContextMenu"/>
                                        </StackPanel.ContextMenu>
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <!-- 默认样式 -->
                                                <Setter Property="Margin" Value="0,0,0,5"/>
                                                
                                                <!-- 根据插件类型设置不同的左边距（缩进） -->
                                                <Style.Triggers>
                                                    <!-- 已卸载插件（通过IsLoaded属性判断） -->
                                                    <DataTrigger Binding="{Binding IsLoaded}" Value="False">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Opacity" Value="0.7"/>
                                                    </DataTrigger>
                                                    
                                                    <!-- 主插件（Plugin）类型，无缩进或小缩进 -->
                                                    <DataTrigger Binding="{Binding Type}" Value="Plugin">
                                                        <Setter Property="Margin" Value="5,0,0,5"/>
                                                    </DataTrigger>
                                                    
                                                    <!-- 依赖插件（Dependency）类型，更大的缩进 -->
                                                    <DataTrigger Binding="{Binding Type}" Value="Dependency">
                                                        <Setter Property="Margin" Value="25,0,0,5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <!-- 显示已卸载状态 -->
                                            <TextBlock Text=" (已卸载)" FontSize="12" Foreground="Red" Margin="5,0,0,0" Visibility="Collapsed">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLoaded}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Version}" FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap" Margin="0,2,0,5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>
                
                <!-- 切换按钮 -->
                <Button Grid.Column="1" Content="→" Click="TogglePluginPanel_Click" Background="#E0E0E0" BorderBrush="Transparent" Padding="0" ToolTip="隐藏插件栏" Width="20" x:Name="ToggleButton" VerticalAlignment="Stretch" HorizontalAlignment="Right"/>
            </Grid>
            
            <!-- 分隔线（可拖动调整插件栏宽度） -->
            <GridSplitter Grid.Column="1" Width="5" Background="#D0D0D0" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" x:Name="PluginSplitter" VerticalAlignment="Stretch"/>
            
            <!-- 插件工作区 -->
            <Grid Grid.Column="2" Margin="2" x:Name="PluginWorkspaceGrid">
                <!-- 多标签页插件工作区 -->
                <TabControl x:Name="PluginWorkspaceTabs" SelectionChanged="PluginWorkspaceTabs_SelectionChanged">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Width="Auto">
                                <Button Content="×" Width="20" Height="20" DockPanel.Dock="Right" 
                                        Click="ClosePluginTab_Click" Margin="5,0,0,0" Padding="0" 
                                        FontSize="12" FontWeight="Bold" Background="Transparent" 
                                        BorderBrush="Transparent" Foreground="Gray" 
                                        ToolTip="关闭标签页"/>
                                <TextBlock Text="{Binding Title}" Padding="5,0"/>
                            </DockPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <ContentControl Content="{Binding Content}"/>
                            </ScrollViewer>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
                <TextBlock Text="请选择一个插件" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Gray" Visibility="Collapsed" x:Name="NoPluginSelectedText"/>
            </Grid>
        </Grid>
        
        <!-- 水平分隔线（可拖动调整调试信息窗口高度） -->
        <GridSplitter Grid.Row="3" Height="5" Background="#D0D0D0" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" HorizontalAlignment="Stretch"/>
        
        <!-- 调试信息区域 -->
        <DockPanel Grid.Row="4" Margin="2" x:Name="DebugPanel">
            <TextBox x:Name="DebugInfoTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Margin="2"/>
        </DockPanel>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="5" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="就绪" Margin="5,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Button Content="调试信息" Click="ShowDebugPanel_Click" Padding="5,0" Margin="0,0,15,0" ToolTip="显示调试信息面板"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
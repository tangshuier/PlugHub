<UserControl x:Class="WPFPluginToolbox.UI.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WPFPluginToolbox.UI"
             mc:Ignorable="d">
    <!-- 移除固定尺寸，让控件自适应父容器 -->
    
    <!-- 定义样式资源 -->
    <UserControl.Resources>
        <!-- 定义Material Design风格的按钮样式 -->
        <Style x:Key="MaterialButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="1" Opacity="0.1" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#EEEEEE"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="1" Opacity="0.05" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 定义Material Design风格的单选按钮样式 -->
        <Style x:Key="MaterialRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 12">
                            <Grid>
                                <Ellipse Width="18" Height="18" Fill="White" Stroke="#BDBDBD" StrokeThickness="2"/>
                                <Ellipse x:Name="InnerCircle" Width="10" Height="10" Fill="#2196F3" Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter Margin="10 0 0 0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 定义Material Design风格的复选框样式 -->
        <Style x:Key="MaterialCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid>
                                <Rectangle Width="18" Height="18" Fill="White" Stroke="#BDBDBD" StrokeThickness="2" RadiusX="2" RadiusY="2"/>
                                <Path x:Name="CheckMark" Data="M3,10 L7,14 L15,6" Stroke="#2196F3" StrokeThickness="2" Stretch="Fill" Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter Margin="10 0 0 0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- 添加柔和的背景色 -->
    <Grid Background="#F5F5F5">
        <!-- 使用更合理的网格布局，避免元素重叠 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题区域 -->
        <Border Grid.Row="0" Background="#E8E8E8" Padding="15 10" BorderThickness="0 0 0 1" BorderBrush="#DDDDDD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="工具箱设置" FontSize="18" FontWeight="SemiBold" Foreground="#333333" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="SaveButton" Content="保存" Width="100" Height="36" Click="SaveButton_Click" Style="{StaticResource MaterialButtonStyle}" Background="#2196F3" Foreground="White"/>
            </Grid>
        </Border>
        
        <!-- 设置内容区域 -->
        <Border Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- 主题设置卡片 -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0 0 0 20" BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="工具箱主题色" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0 0 0 15"/>
                        <StackPanel Orientation="Vertical">
                            <RadioButton x:Name="BlackThemeRadio" Content="黑色" IsChecked="True" Style="{StaticResource MaterialRadioButtonStyle}"/>
                            <RadioButton x:Name="WhiteThemeRadio" Content="白色" Style="{StaticResource MaterialRadioButtonStyle}"/>
                            <RadioButton x:Name="LightBlackThemeRadio" Content="浅黑色" Style="{StaticResource MaterialRadioButtonStyle}"/>
                            <RadioButton x:Name="GrayThemeRadio" Content="灰色" Style="{StaticResource MaterialRadioButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- 调试窗口设置卡片 -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0 0 0 20" BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="调试窗口设置" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0 0 0 15"/>
                        <CheckBox x:Name="DebugWindowDefaultOpenCheck" Content="启动时默认打开调试窗口" Style="{StaticResource MaterialCheckBoxStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        

        

    </Grid>
</UserControl>
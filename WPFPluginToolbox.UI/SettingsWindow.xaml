<UserControl x:Class="WPFPluginToolbox.UI.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WPFPluginToolbox.UI"
             mc:Ignorable="d">
    <!-- 移除固定尺寸，让控件自适应父容器 -->
    
    <!-- 定义样式资源 -->
    <UserControl.Resources>
        <!-- 定义卡片阴影效果 -->
        <DropShadowEffect x:Key="CardShadowEffect" 
                         BlurRadius="10" 
                         Opacity="0.2" 
                         ShadowDepth="3" 
                         Direction="270"/>
    </UserControl.Resources>
    
    <!-- 添加柔和的背景色 -->
    <Grid>
        <!-- 使用更合理的网格布局，避免元素重叠 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题区域 -->
        <Border Grid.Row="0" Padding="15 10" BorderThickness="0 0 0 1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="工具箱设置" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="SaveButton" Content="保存" Width="100" Height="36" Click="SaveButton_Click"/>
            </Grid>
        </Border>
        
        <!-- 设置内容区域 -->
        <Border Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- 主题设置卡片 -->
                <Border CornerRadius="8" Padding="20" Margin="0 0 0 20" BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="工具箱主题色" FontSize="14" FontWeight="Medium" Margin="0 0 0 15"/>
                        <StackPanel Orientation="Vertical">
                            <RadioButton x:Name="BlackThemeRadio" Content="黑色" IsChecked="True" Margin="0 0 0 12"/>
                            <RadioButton x:Name="WhiteThemeRadio" Content="白色" Margin="0 0 0 12"/>
                            <RadioButton x:Name="LightBlackThemeRadio" Content="浅黑色" Margin="0 0 0 12"/>
                            <RadioButton x:Name="GrayThemeRadio" Content="灰色" Margin="0 0 0 12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- 调试窗口设置卡片 -->
                <Border CornerRadius="8" Padding="20" Margin="0 0 0 20" BorderThickness="1"
                        Effect="{StaticResource CardShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="调试窗口设置" FontSize="14" FontWeight="Medium" Margin="0 0 0 15"/>
                        <CheckBox x:Name="DebugWindowDefaultOpenCheck" Content="启动时默认打开调试窗口"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        

        

    </Grid>
</UserControl>